<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OhMo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_64</item>
        <item name="colorPrimaryVariant">@color/blue_64</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="statusBarThemeBlue" parent="Theme.OhMo">
        <item name="android:statusBarColor">@color/blue_64</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>