<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.posting.CoordiChipFragment">


        <TextView
            android:id="@+id/tv_posting_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_4e"
            android:textSize="18sp"
            android:text="그날 입은 코디를 골라주세요"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/pretendard_medium" />

        <TextView
            android:id="@+id/tv_posting_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상의"
            android:textSize="16sp"
            android:layout_marginTop="26dp"
            android:textColor="@color/grey_ae"
            android:fontFamily="@font/one_mobile_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@id/tv_posting_description" />


        <TextView
            android:id="@+id/tv_posting_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하의"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey_ae"
            android:fontFamily="@font/one_mobile_title"
            app:layout_constraintStart_toStartOf="@id/tv_posting_top"
            app:layout_constraintTop_toBottomOf="@id/tv_posting_top" />



        <TextView
            android:id="@+id/tv_posting_outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아우터"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey_ae"
            android:fontFamily="@font/one_mobile_title"
            app:layout_constraintStart_toStartOf="@id/tv_posting_bottom"
            app:layout_constraintTop_toBottomOf="@id/tv_posting_bottom" />


        <TextView
            android:id="@+id/tv_posting_shoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신발"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey_ae"
            android:fontFamily="@font/one_mobile_title"
            app:layout_constraintStart_toStartOf="@id/tv_posting_outer"
            app:layout_constraintTop_toBottomOf="@id/tv_posting_outer" />


        <TextView
            android:id="@+id/tv_posting_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey_ae"
            android:fontFamily="@font/one_mobile_title"
            app:layout_constraintStart_toStartOf="@id/tv_posting_shoe"
            app:layout_constraintTop_toBottomOf="@id/tv_posting_shoe" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_posting"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintTop_toTopOf="@id/tv_posting_top"
            app:layout_constraintStart_toEndOf="@id/tv_posting_outer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_posting_etc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>