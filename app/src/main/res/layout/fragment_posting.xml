<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.posting.PostingFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_posting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="새 글 작성"
            app:titleCentered="true"
            app:titleTextColor="@color/black_1a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <FrameLayout
            android:id="@+id/layout_posting_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_posting"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.77"
            android:background="@color/grey_fa" >

            <TextView
                android:id="@+id/tv_posting_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진을 첨부해주세요\n(최대 3장)"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/grey_ae"
                android:drawablePadding="9dp"
                app:drawableTopCompat="@drawable/posting_addphoto_icon" />

        </FrameLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_posting_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_add_posting"
            app:layout_constraintTop_toBottomOf="@id/layout_posting_add" />


        <ImageButton
            android:id="@+id/btn_add_posting"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.264"
            android:layout_marginBottom="23dp"
            app:layout_constraintDimensionRatio="103:43"
            android:src="@drawable/posting_button_0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>