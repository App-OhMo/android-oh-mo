<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_current_keyword"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/search_recent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_current_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toEndOf="@+id/iv_current_keyword"
        app:layout_constraintTop_toTopOf="@+id/iv_current_keyword"
        app:layout_constraintBottom_toBottomOf="@+id/iv_current_keyword"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_current_keyword_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textSize="12sp"
        android:textColor="@color/grey_ae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>