<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <FrameLayout
            android:id="@+id/fl_search_popular_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingBottom="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/Blue_64">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_popular_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_search_category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="12dp"
                android:paddingBottom="13dp">

                <TextView
                    android:id="@+id/tv_popular_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/search_popular_category"
                    android:layout_marginStart="16dp"
                    android:gravity="bottom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_popular_category_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="(07.27 14:00)"
                    android:gravity="top"
                    app:layout_constraintStart_toEndOf="@+id/tv_popular_category"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_popular_category"
                    android:layout_marginStart="6dp"/>

                <LinearLayout
                    android:id="@+id/ll_search_category_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/ll_search_category_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_popular_category">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_popular_no_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="1 "/>
                        <TextView
                            android:id="@+id/tv_popular_content_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="자켓"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_popular_content_status_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="@string/search_popular_keyword_up"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_popular_no_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="2 "/>
                        <TextView
                            android:id="@+id/tv_popular_content_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="자켓"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_popular_content_status_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="@string/search_popular_keyword_stay"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_popular_no_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="3 "/>
                        <TextView
                            android:id="@+id/tv_popular_content_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="자켓"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_popular_content_status_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="@string/search_popular_keyword_down"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_search_category_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toEndOf="@+id/ll_search_category_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_popular_category"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_popular_no_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="4 "/>
                        <TextView
                            android:id="@+id/tv_popular_content_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="자켓"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_popular_content_status_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="@string/search_popular_keyword_up"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_popular_no_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="5 "/>
                        <TextView
                            android:id="@+id/tv_popular_content_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="자켓"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_popular_content_status_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="@string/search_popular_keyword_stay"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_popular_no_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="6 "/>
                        <TextView
                            android:id="@+id/tv_popular_content_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="자켓"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_popular_content_status_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/one_mobile_title"
                            android:text="@string/search_popular_keyword_down"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_search_current_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_current_keyword"
            android:textColor="@color/black"
            android:fontFamily="@font/font_pretendard_medium"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/fl_search_popular_category"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/tv_search_current_keyword_total_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체삭제"
            android:textSize="12sp"
            android:textColor="@color/Grey_ae"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_search_popular_category"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="19dp"/>

        <TextView
            android:id="@+id/tv_search_current_keyword_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_current_keyword_empty"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/Grey_ae"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_search_current_keyword"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_current_keyword"
            android:layout_marginTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_current_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_current_keyword"
            android:layout_marginTop="16dp"
            android:paddingStart="30dp"
            android:paddingEnd="21dp"
            tools:listitem="@layout/item_search_keyword"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>